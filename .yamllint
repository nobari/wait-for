extends: default

rules:
  line-length:
    max: 120
    level: error
  document-start:
    present: true
    level: error
  trailing-spaces:
    level: error
  comments:
    min-spaces-from-content: 1
  indentation:
    spaces: 2
    indent-sequences: true
  truthy:
    allowed-values: ['true', 'false', 'on', 'off', 'yes', 'no']
  empty-lines:
    max: 1
    max-start: 0
    max-end: 0
  colons:
    max-spaces-before: 0
    max-spaces-after: 1 